<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/highscore_item_height"
    android:padding="@dimen/s_8">

    <ImageView
        android:layout_width="@dimen/highscore_item_height"
        android:layout_height="@dimen/highscore_item_height"
        android:id="@+id/user_pic"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/highscore_item_height"
        android:id="@+id/user_name"
        android:layout_toEndOf="@id/user_pic"/>

    <TextView
        android:layout_width="@dimen/highscore_item_height"
        android:layout_height="@dimen/highscore_item_height"
        android:id="@+id/user_score"
        android:layout_toStartOf="@id/user_last_played"/>

    <TextView
        android:layout_width="@dimen/highscore_item_width"
        android:layout_height="@dimen/highscore_item_height"
        android:id="@+id/user_last_played"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>