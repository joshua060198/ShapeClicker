<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/highscore_item_height">

    <ImageView
        android:layout_width="@dimen/highscore_item_height"
        android:layout_height="@dimen/highscore_item_height"
        android:id="@+id/user_pic"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:padding="@dimen/s_8"
        android:layout_marginEnd="@dimen/s_16"/>

    <TextView
        android:layout_width="150dp"
        android:gravity="center_horizontal"
        android:layout_height="@dimen/highscore_item_height"
        android:id="@+id/user_name"
        android:layout_toEndOf="@id/user_pic"
        android:padding="@dimen/s_8"
        android:layout_marginEnd="@dimen/s_8"/>

    <TextView
        android:layout_width="75dp"
        android:layout_height="@dimen/highscore_item_height"
        android:id="@+id/user_score"
        android:gravity="center_horizontal"
        android:layout_toEndOf="@id/user_name"
        android:padding="@dimen/s_8"/>

    <TextView
        android:layout_width="@dimen/highscore_item_width"
        android:layout_height="@dimen/highscore_item_height"
        android:id="@+id/user_last_played"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:padding="@dimen/s_8"/>

</RelativeLayout>